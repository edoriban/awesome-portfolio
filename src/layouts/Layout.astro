---
import Header from "@components/ui/Header.astro";
import "@fontsource-variable/onest";
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		/* Gradiente estático sutil */
		background: linear-gradient(
			135deg,
			#0f172a 0%,
			/* slate-900 más oscuro */ #1e293b 40%,
			/* slate-800 */ #1e1b4b 70%,
			/* indigo-950 */ #1e1b4b 100% /* indigo-950 */
		);

		/* Patrón geométrico con puntos */
		background-image: radial-gradient(
				rgba(99, 102, 241, 0.1) 1px,
				transparent 1px
			),
			radial-gradient(rgba(192, 132, 252, 0.1) 1px, transparent 1px);
		background-size:
			50px 50px,
			30px 30px;
		background-position:
			0 0,
			25px 25px;

		/* Asegura que el contenido ocupe al menos toda la altura de la ventana */
		color: #e2e8f0; /* Color de texto base (slate-200) */
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>
