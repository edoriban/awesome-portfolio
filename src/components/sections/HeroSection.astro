---
import Badge from "@components/ui/Badge.astro";
import "@styles/shared.css";
const { githubData } = Astro.props;
---

<section class="w-full lg:w-[740px] mx-auto pt-32 pb-16">
    <div class="flex flex-col md:flex-row gap-12 items-start">
        <!-- Columna de imagen y estadísticas -->
        <div
            class="relative mb-4 md:mb-0 flex-shrink-0 flex flex-col items-center md:items-start"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-blue-500/30 to-purple-600/30 rounded-full blur-md"
            >
            </div>
            <img
                src={githubData.avatar_url}
                alt={`Avatar for ${githubData.login}`}
                class="relative w-56 h-56 rounded-full border-2 border-white/20 z-10"
            />
        </div>
        <!-- Columna de biografía -->
        <div>
            <h1
                class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-6 pt-4"
            >
                Hi, I'm Edgar
            </h1>
            <h2 class="text-xl opacity-80">
                <span class="highlighted-text">Fullstack Developer</span> with over
                5 years of experience from Nuevo León, Mexico.
            </h2>
            <p class="text-xl opacity-70 pt-6">
                Passionate about crafting cutting-edge web solutions that turn
                ideas into powerful digital experiences.
            </p>
        </div>
    </div>
    <!-- Botones de GitHub y LinkedIn -->
    <div class="flex gap-x-3 pt-4">
        {
            githubData && (
                <a
                    href={githubData.html_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="github-button"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="inline-block mr-1"
                    >
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    GitHub
                </a>
            )
        }
        <a
            href="https://www.linkedin.com/in/edoriban"
            target="_blank"
            rel="noopener noreferrer"
            class="linkedin-button"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="inline-block mr-1"
            >
                <path
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
            </svg>
            LinkedIn
        </a>
    </div>
</section>

<style>
    .github-button,
    .linkedin-button {
        display: inline-flex;
        align-items: center;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .github-button {
        background: linear-gradient(
            135deg,
            rgba(91, 33, 182, 0.8),
            rgba(124, 58, 237, 0.8)
        );
    }

    .github-button:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
        background: linear-gradient(
            135deg,
            rgba(109, 40, 217, 0.9),
            rgba(139, 92, 246, 0.9)
        );
    }

    .linkedin-button {
        background: linear-gradient(
            135deg,
            rgba(10, 102, 194, 0.8),
            rgba(0, 119, 181, 0.8)
        );
    }

    .linkedin-button:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(10, 102, 194, 0.3);
        background: linear-gradient(
            135deg,
            rgba(10, 102, 194, 0.9),
            rgba(0, 119, 181, 0.9)
        );
    }
</style>
