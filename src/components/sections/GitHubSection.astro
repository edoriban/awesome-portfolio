---
const { githubData } = Astro.props;
---

<section class="w-full lg:w-[740px] mx-auto py-10">
    <div class="flex flex-col md:flex-row gap-8 items-start">
        <div class="flex-shrink-0">
            <img
                src={githubData.avatar_url}
                alt={`Avatar for ${githubData.login}`}
                class="w-32 h-32 rounded-full border-2 border-gray-700"
            />
        </div>
        <div>
            <h3 class="text-2xl font-bold mb-2">My GitHub Profile</h3>
            <p class="text-lg opacity-80 mb-3">{githubData.bio}</p>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div class="bg-gray-800 rounded-lg p-4 text-center">
                    <span class="block text-2xl font-bold"
                        >{githubData.public_repos}</span
                    >
                    <span class="text-sm opacity-70">Repositories</span>
                </div>
                <div class="bg-gray-800 rounded-lg p-4 text-center">
                    <span class="block text-2xl font-bold"
                        >{githubData.followers}</span
                    >
                    <span class="text-sm opacity-70">Followers</span>
                </div>
                <div class="bg-gray-800 rounded-lg p-4 text-center">
                    <span class="block text-2xl font-bold"
                        >{githubData.following}</span
                    >
                    <span class="text-sm opacity-70">Following</span>
                </div>
            </div>

            <a
                href={githubData.html_url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white transition-colors"
            >
                View GitHub Profile
            </a>
        </div>
    </div>
</section>

<style>
    .calendar-container {
        max-width: 100%;
        overflow-x: auto;
    }
</style>
