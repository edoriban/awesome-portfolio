---
import "@styles/shared.css";
const workExperience = [
    {
        title: "Software Engineer",
        company: "Insytech",
        period: "July 2018 - Present",
        description:
            "Working as a software engineer developing production control software in multiple projects for a transnational company (Polaris). Primarily using Visual Basic, JavaScript, and C#.",
    },
    {
        title: "Junior Developer",
        company: "TSI",
        period: "July 2017 - June 2018",
        description:
            "Working as a Junior Developer, with a specific focus on SQL Server database management, establishing communication protocols with Atlas Copco industrial tools, and programming on SCADA software using VBScript.",
    },
];

const education = [
    {
        degree: "Software Engineering",
        institution: "Universidad del Norte, A.C.",
        period: "Unknown",
        description:
            "Software Engineering, Design Patterns, HTML, CSS, JavaScript, ASP.NET, Entity Framework, SQL Server and others.",
    },
];

// Updated skills based on LinkedIn profile (Top Skills + About section)
const skills = [
    {
        category: "Frontend", // Frontend technologies and languages
        items: [
            "React.js",
            "JavaScript",
            "TypeScript",
            "Front-End Development",
            "HTML5",
            "CSS3",
            "Tailwind CSS",
            "Astro",
        ],
    },
    {
        category: "Backend", // Backend technologies and languages
        items: [
            "Node.js",
            "ASP.NET MVC",
            "C#",
            "VBScript",
            "Back-End Web Development",
            "ASP.NET",
            "Entity Framework",
            "Python",
            "GraphQL",
            "WebSockets",
            "OPC-UA",
        ],
    },
    {
        category: "Other Technologies", // Other technologies and tools
        items: [
            "Git",
            "Redis",
            "Docker",
            "RabbitMQ",
            "REST APIs",
            "GraphQL",
            "SQL",
            "MongoDB",
            "PostgreSQL",
            "Sqlite",
            "Store Procedures",
        ],
    },
    {
        category: "Soft Skills", // General skills or principles
        items: [
            "SOLID Design Principles",
            "Design Patterns",
            "Team work",
            "Collaboration",
            "Agile Methodologies",
            "Problem Solving",
            "Communication",
            "Critical Thinking",
            "Leadership",
        ],
    },
];
---

<!-- Scroll Down Indicator -->
<div class="scroll-down-indicator">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-8 h-8 text-gray-400"
    >
        <path
            d="M12 2C8.13 2 5 5.13 5 9v6c0 3.87 3.13 7 7 7s7-3.13 7-7V9c0-3.87-3.13-7-7-7zm0 2c2.76 0 5 2.24 5 5v6c0 2.76-2.24 5-5 5s-5-2.24-5-5V9c0-2.76 2.24-5 5-5z"
        ></path>
        <path
            d="M12 6c-.55 0-1 .45-1 1v3c0 .55.45 1 1 1s1-.45 1-1V7c0-.55-.45-1-1-1z"
        ></path>
    </svg>
</div>

<div class="container mx-auto px-4 py-20 max-w-4xl">
    <h1 class="section-title mb-16 text-center relative" data-aos="fade-up">
        My Professional <span class="highlighted-text">Journey</span>
    </h1>

    <!-- Introduction Section - Updated with LinkedIn About text -->
    <section class="mb-20">
        <div
            class="premium-glass-panel animated-border p-8 rounded-xl shadow-glow"
        >
            <p class="text-lg lg:text-xl leading-relaxed mb-4 opacity-90">
                I'm a software engineer based in Nuevo Le√≥n, with 5+ years of
                experience in the software industry. I have worked on a variety
                of projects, ranging from web applications to desktop apps.
            </p>
            <p class="text-lg lg:text-xl leading-relaxed mb-4 opacity-90">
                I am proficient in languages such as JavaScript/TypeScript,
                VBScript and C#, and have experience using frameworks like
                ReactJs and ASP.NET.
            </p>
        </div>
    </section>

    <!-- Work Experience Timeline -->
    <section class="mb-20">
        <h2 class="subsection-title mb-12 text-center">
            Work <span class="highlighted-text">Experience</span>
        </h2>

        <div class="timeline">
            {
                workExperience.map((job, index) => (
                    <div class="timeline-item">
                        <div class="timeline-dot" />
                        <div class="premium-glass-panel p-6 rounded-lg transform-on-hover">
                            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3">
                                <h3 class="text-2xl font-bold text-white mb-1 sm:mb-0">
                                    {job.title}
                                </h3>
                                <span class="period-badge">{job.period}</span>
                            </div>
                            <span class="text-lg font-semibold gradient-company block mb-3">
                                {job.company}
                            </span>
                            <p class="opacity-80 leading-relaxed">
                                {job.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <!-- Education Section -->
    <section class="mb-20">
        <h2 class="subsection-title mb-12 text-center">
            <span class="highlighted-text">Education</span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-1 gap-8">
            {" "}
            {/* Changed to grid-cols-1 as there's only one entry */}
            {
                education.map((edu) => (
                    <div class="premium-glass-panel p-6 rounded-lg transform-on-hover">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3">
                            <h3 class="text-xl font-bold text-white mb-1 sm:mb-0">
                                {edu.degree}
                            </h3>
                            {/* Period badge removed as period is unknown */}
                            {/* <span class="period-badge edu-badge">{edu.period}</span> */}
                        </div>
                        <span class="text-lg font-semibold gradient-institute block mb-3">
                            {edu.institution}
                        </span>
                        <p class="opacity-80">{edu.description}</p>
                    </div>
                ))
            }
        </div>
    </section>

    <!-- Skills Section -->
    <section>
        <h2 class="subsection-title mb-12 text-center">
            Skills & <span class="highlighted-text">Technologies</span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                skills.map((skillGroup, i) => (
                    <div class="premium-glass-panel p-6 rounded-lg skill-panel">
                        <h3
                            class={`text-xl font-bold mb-5 text-center category-title category-title-${i}`}
                        >
                            {skillGroup.category}
                        </h3>
                        <div class="flex flex-wrap gap-3 justify-center">
                            {skillGroup.items.map((skill) => (
                                <span class="skill-badge">{skill}</span>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </section>
</div>

